<Window x:Class="TestovoeNabiullinVladislav.View.AddClientWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestovoeNabiullinVladislav.View"
        mc:Ignorable="d"
        Title="AddClientWindow1" Height="270" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalAlignment="Center" FontSize="23" Margin="6" Content="Добавление клиента"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка -->
            <StackPanel Grid.Column="0" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Имя" Width="120"/>
                    <TextBox Width="150" Text="{Binding NewClient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Валюта" Width="120"/>
                    <ComboBox Width="150" SelectedIndex="{Binding SelectedCurrencyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{Binding CurrencyList}"
                          SelectedItem="{Binding NewClient.Wallet.Name, Mode=TwoWay}"/>
                </StackPanel>
            </StackPanel>

            <!-- Правая колонка -->
            <StackPanel Grid.Column="1" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Кошелёк" Width="120"/>
                    <TextBox Width="150" Text="{Binding NewClient.Wallet.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Стартовый баланс" Width="130"/>
                    <TextBox Width="150" Text="{Binding NewClient.Wallet.StartBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Добавить" Width="100" Height="40" Margin="5" Command="{Binding AddUserCommand}"/>
            <Button Content="Отмена" Width="100" Margin="5" Command="{Binding CloseWinCommand}"/>
        </StackPanel>
    </Grid>
</Window>
