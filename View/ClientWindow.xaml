<Window x:Class="TestovoeNabiullinVladislav.View.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestovoeNabiullinVladislav.View"
        mc:Ignorable="d"
        Title="ClientWindow" Height="600" Width="450" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Image Source="/Icons/icons8_User_Default_512px.png" RenderOptions.BitmapScalingMode="HighQuality"/>

        <Grid DataContext="{Binding ThisClient}" Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <Label Content="Кошелёк" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Имя :"/>
                    <Label Content="{Binding Name}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Баланс Кошелька :"/>
                    <Label Content="{Binding Wallet.Balance, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Валюта :"/>
                    <Label Content="{Binding Wallet.Name}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel>
                <Label Content="Перевод клиенту" HorizontalAlignment="Center"/>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="7">
                        <Label Content="Выберите клиента для перевода" VerticalAlignment="Center"/>
                        <ComboBox Width="170" 
                              ItemsSource="{Binding DataBase.ObservClients}"
                              SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
                              DisplayMemberPath="Name">
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="7">
                        <Label Content="Сумма перевода" VerticalAlignment="Center"/>
                        <TextBox Width="150" Text="{Binding TransferAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Перевод" Width="140" Height="30" Margin="5" 
                            Command="{Binding TransferUserCommand}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
        </Grid>
        <DataGrid Margin="7" Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding ThisClient.Transactions}" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding Id}"/>
                <DataGridTextColumn  Header="Сумма" Binding="{Binding Amount}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Тип транзацкции" Binding="{Binding TypeTransaction}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
